  </ItemGroup>

  <ItemGroup>
    <ApplicationDefinition Include="AW2Application.xaml" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>

  <ItemGroup>
