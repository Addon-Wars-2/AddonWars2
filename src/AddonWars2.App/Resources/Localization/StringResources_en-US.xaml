<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="clr-namespace:System;assembly=mscorlib">

    <!--
    If one struggles with a literal translation of welcome messages, it's acceptable to use a suitable
    adaptation with a similar or close to the original meaning. Proverbs, idioms are the best candidates for it.
    If a string contains a wordplay, it is highly recommended to find a "localized" wordplay as well.
    -->

    <!-- Application -->
    <s:String x:Key="S.Application.Title">Addon Wars 2</s:String> <!-- NO TRANSLATION -->

    <!-- MainWindow | Header -->
    <s:String x:Key="S.MainWindow.Header.Menu.Language">Language</s:String>
    <s:String x:Key="S.MainWindow.Header.Text.AppName">AddonWars2</s:String>  <!-- NO TRANSLATION -->
    <s:String x:Key="S.MainWindow.Header.Text.AppDescription">Guild Wars 2™: Unofficial Add-On Manager</s:String> <!-- NO TRANSLATION FOR "Guild Wars 2™" part -->
    <s:String x:Key="S.MainWindow.Header.Hyperlink.GettingStarted">GETTING STARTED</s:String>
    <s:String x:Key="S.MainWindow.Header.Hyperlink.Wiki">GW2 WIKI</s:String> <!-- NO TRANSLATION FOR "GW2" part -->
    <s:String x:Key="S.MainWindow.Header.Hyperlink.Support">SUPPORT</s:String>

    <!-- MainWindow | Tab Menu -->
    <s:String x:Key="S.MainWindow.TabMenu.Header.Home">Home</s:String>
    <s:String x:Key="S.MainWindow.TabMenu.Header.News">News</s:String>
    <s:String x:Key="S.MainWindow.TabMenu.Header.Logs">Logs</s:String>

    <!-- Home Page -->
    <s:String x:Key="S.HomePage.Welcome.Message_01">Alright, where are we heading today?</s:String>
    <s:String x:Key="S.HomePage.Welcome.Message_02">Where did I leave my chak infusion?</s:String>
    <s:String x:Key="S.HomePage.Welcome.Message_03">More violets I say, less violence.</s:String>
    <s:String x:Key="S.HomePage.Welcome.Message_04">...no mortal would be so monumentally STUPID as to destroy a dragon...</s:String>
    <s:String x:Key="S.HomePage.GameLocation.SelectButton">SELECT</s:String>
    <s:String x:Key="S.HomePage.Footer.CreatedBy">created by</s:String>
    <s:String x:Key="S.HomePage.Footer.CreatedByAuthor">Rihar.3465 (Rindaar)</s:String> <!-- NO TRANSLATION -->

    <!-- News Page -->
    <s:String x:Key="S.NewsPage.NewsList.Header">Latest News</s:String>
    <s:String x:Key="S.NewsPage.NewsList.UpdatingNewsPlaceholder">Updating...</s:String>
    <s:String x:Key="S.NewsPage.NewsDesc.Header">Description</s:String>

    <!-- Logging Page -->
    <s:String x:Key="S.LoggingPage.Description">Logging is performed automatically.</s:String>

    <!-- Controls -->
    <s:String x:Key="S.Controls.ComboBox.Placeholder">empty...</s:String>
    <s:String x:Key="S.Controls.TextBox.SelectGW2ExePlaceholder">Select gw2-64.exe...</s:String>

    <!-- Common | Validation Messages -->
    <s:String x:Key="S.Common.ValidationText.NotEmptyField">Field is required.</s:String>
    <s:String x:Key="S.Common.ValidationText.ValidFileName">Must be a valid Windows file name.</s:String>
    <s:String x:Key="S.Common.ValidationText.ValidPath">Must be a valid Windows path.</s:String>
    <s:String x:Key="S.Common.ValidationText.DirectoryExists">Must be a valid Windows directory.</s:String>
    <s:String x:Key="S.Common.ValidationText.FileExists">Must be an existing file.</s:String>
    <s:String x:Key="S.Common.ValidationText.GW2Exe">Must be a Guild Wars 2 executable.</s:String>

</ResourceDictionary>